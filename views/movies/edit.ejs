<h2>Uredi film</h2>
<!-- action is url where the form goes to -->
<!-- to use post method, you can only use forms -->

<!-- method override parameter -->
<form action="/movies/<%= movie.id %>?_method=PUT" method="POST">
    <%- include('_form_fields')%> 
    <!-- anchor tags are used to link things  -->
    <!-- buttons used to interact with forms or other objects  -->
    <a href="/movies">Odustani</a>
    <button type="submit">Spremi</button>
</form>